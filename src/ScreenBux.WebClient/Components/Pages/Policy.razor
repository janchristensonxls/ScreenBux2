@page "/policy"
@rendermode InteractiveServer
@using System.Text.Json
@using ScreenBux.Shared.Models
@inject ScreenBux.WebClient.Services.PolicyApiService PolicyApiService

<PageTitle>Policy</PageTitle>

<h1>Policy Editor</h1>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Policy JSON</h5>
        <textarea class="form-control" rows="16" @bind="_policyJson"></textarea>
        <div class="mt-3">
            <button class="btn btn-primary me-2" @onclick="LoadPolicyAsync">Load</button>
            <button class="btn btn-success" @onclick="SavePolicyAsync">Save</button>
        </div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(_statusMessage))
{
    <div class="alert alert-info">@_statusMessage</div>
}

@code {
    private string _policyJson = string.Empty;
    private string _statusMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPolicyAsync();
    }

    private async Task LoadPolicyAsync()
    {
        try
        {
            _policyJson = await PolicyApiService.GetPolicyJsonAsync();
            _statusMessage = "Policy loaded.";
        }
        catch (Exception ex)
        {
            _statusMessage = $"Failed to load policy: {ex.Message}";
        }
    }

    private async Task SavePolicyAsync()
    {
        try
        {
            var policy = JsonSerializer.Deserialize<PolicyConfiguration>(_policyJson, new JsonSerializerOptions
            {
                PropertyNameCaseInsensitive = true
            });

            if (policy == null)
            {
                _statusMessage = "Policy JSON is invalid.";
                return;
            }

            await PolicyApiService.UpdatePolicyAsync(policy);
            _statusMessage = "Policy saved.";
        }
        catch (JsonException jsonException)
        {
            _statusMessage = $"Policy JSON error: {jsonException.Message}";
        }
        catch (Exception ex)
        {
            _statusMessage = $"Failed to save policy: {ex.Message}";
        }
    }
}
