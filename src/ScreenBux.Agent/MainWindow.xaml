<Window x:Class="ScreenBux.Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenBux.Agent"
        mc:Ignorable="d"
        Title="ScreenBux Agent" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="ScreenBux Parental Control Agent" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="StartButton" Content="Start Monitoring" 
                    Width="120" Height="30" Margin="0,0,10,0" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Monitoring" 
                    Width="120" Height="30" Margin="0,0,10,0" Click="StopButton_Click" IsEnabled="False"/>
            <TextBlock x:Name="ServiceStatusText" VerticalAlignment="Center" 
                       Margin="10,0,0,0" Text="Service: Unknown" FontWeight="Bold"/>
        </StackPanel>

        <!-- Activity Log -->
        <GroupBox Grid.Row="2" Header="Activity Log" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox" IsReadOnly="True" 
                         TextWrapping="Wrap" BorderThickness="0"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
